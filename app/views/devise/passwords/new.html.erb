<h2>パスワードリセット</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください", class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "パスワードリセットのメールを送信する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
